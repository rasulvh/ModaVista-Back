    <section id="benefits" class="my-5">
        <div class="container">
            <div class="row">
                @for (int i = 1; i <= Model.Reasons.Count; i++)
                {
                    string className = "";

                    if(i == 1)
                    {
                        className = "pr";
                    }
                    else if(i == 2)
                    {
                        className = "px";
                    }
                    else
                    {
                        className = "pl";
                    }

                    <div class="col-lg-4 @className-0">
                        <div class="single-benefit">
                            <i class="@Model.Reasons[i-1].IconClass"></i>
                            <div class="text">
                                <p>@Model.Reasons[i-1].Heading</p>
