    <section id="blog">
        <div class="head">
            <div class="container">
                <h2>From The Blog</h2>
                <hr>
            </div>
        </div>
        <div class="blogs my-5">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model.Blogs)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="blog-card">
                                <div class="image">
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">
                                        <img style="height:284px" src="~/assets/img/blog/@item.Image" alt="">
                                    </a>
                                </div>
                                <div class="infos">
                                    <div class="up">
                                        <div class="left">
                                            <i class="fa-light fa-calendar"></i>
                                            <span>@item.CreateDate.ToString("MMMM d, yyyy")</span>
                                        </div>
                                    </div>
                                    <div class="down">
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@item.Id">@item.Heading</a>
                                        <p>@item.Text</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
