@model ReasonEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="my-5 text-center">Edit Reason</h1>

    <form method="post" asp-action="Edit">
        <div class="form-group mt-3">
            <input asp-for=Heading class="form-control" placeholder="Heading" />
        </div>
        <div class="form-group mt-3">
            <input asp-for=Text class="form-control" placeholder="Text" />
        </div>
        <div class="form-group mt-3">
            <input asp-for=IconClass class="form-control" placeholder="Icon Class" />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <a asp-action="Index" class="btn btn-primary">Back</a>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>