@model ProductDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h1 class="my-5 text-center">Product</h1>

    <div class="image">
        <img src="~/assets/img/home/products/@Model.Image" style="width:400px;height250px" />
    </div>
    <div class="detail mt-3">
        <p>Name: @Model.Name</p>
        <p>Description: @Model.Description</p>
        <p>Price: $@Model.Price</p>
        <p>Product Category: @Model.ProductCategory</p>
        <p>Brand: @Model.Brand</p>
        <p>Tag: @Model.Tag</p>
    </div>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>