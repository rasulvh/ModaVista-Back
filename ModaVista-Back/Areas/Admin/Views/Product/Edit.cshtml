@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1 class="my-5 text-center">Edit Product</h1>

    <div class="image">
        <img src="~/assets/img/home/products/@Model.OldImage" style="width:400px;height:250px" />
    </div>
    <form method="post" enctype="multipart/form-data" asp-action="Edit">
        <div class="form-group mt-3">
            <lable>New Image</lable>
            <input asp-for=NewImage class="form-control" />
        </div>
        <div class="form-group mt-3">
            <input asp-for=Name class="form-control" placeholder="Name" />
        </div>
        <div class="form-group mt-3">
            <input asp-for=Description class="form-control" placeholder="Description" />
        </div>
        <div class="form-group mt-3">
            <input asp-for=Price class="form-control" placeholder="Price" />
        </div>
        <div class="form-group mt-3">
            <select id="categoryId" asp-for="ProductCategoryId" asp-items="ViewBag.productCategories" class="animated-input form-control">
                <option disabled selected>Select Product Category</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <select id="categoryId" asp-for="BrandId" asp-items="ViewBag.brands" class="animated-input form-control">
                <option disabled selected>Select Brand</option>
            </select>
        </div>
        <div class="form-group mt-3">
            <select id="categoryId" asp-for="TagId" asp-items="ViewBag.tags" class="animated-input form-control">
                <option disabled selected>Select Tag</option>
            </select>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <a asp-action="Index" class="btn btn-primary">Back</a>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>