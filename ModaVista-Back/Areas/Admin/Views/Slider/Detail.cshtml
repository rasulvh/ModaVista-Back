@model SliderDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container">
    <h1 class="my-5 text-center">Edit Product Category</h1>

    <div class="image">
        <img src="~/assets/img/home/@Model.Image" style="width:400px;height250px" />
    </div>
    <div class="detail mt-3">
        <p>Heading: @Model.Heading</p>
        <p>Sub Heading: @Model.SubHeading</p>
        <p>Text: @Model.Text</p>
    </div>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>